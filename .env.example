# MARV Media Grant Finder Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Google Cloud / Gemini
# =============================================================================

# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets ID (from your spreadsheet URL)
# Example URL: https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID_HERE/edit
GOOGLE_SHEETS_ID=your_google_sheets_id_here

# Path to Google Cloud service account JSON file
# Create a service account at https://console.cloud.google.com/iam-admin/serviceaccounts
# Download the JSON key and set the path here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# =============================================================================
# OPTIONAL: Grant Source APIs
# =============================================================================

# Grants.gov API Key (register at https://www.grants.gov/web/grants/applicants/registration.html)
# Note: Basic search works without API key, but rate limited
GRANTS_GOV_API_KEY=your_grants_gov_api_key_here

# SAM.gov API Key (register at https://api.sam.gov/)
SAM_GOV_API_KEY=your_sam_gov_api_key_here

# =============================================================================
# OPTIONAL: Notifications
# =============================================================================

# Email for deadline notifications
NOTIFICATION_EMAIL=your_email@example.com

# =============================================================================
# OPTIONAL: Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
